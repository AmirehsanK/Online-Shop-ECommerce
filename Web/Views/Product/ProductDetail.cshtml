    <script>
           $(document).on("click", ".like-btn, .dislike-btn", function () {
            const productId = $(this).data("product-id");
            const userId = $(this).data("user-id");
            const questionLike = $(this).data("action");

            $.ajax({
                url: '/Product/ToggleQuestionLike',
                type: 'POST',
                data: { productId, userId, questionLike },
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        alert("وضعیت ثبت شد.");
                    } else {
                        alert("مشکلی پیش آمد.");
                    }
                },
                error: function () {
                    alert("مشکلی در ارسال درخواست وجود دارد.");
                }
            });
        });

    </script>
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        // قیمت اصلی محصول
        const basePrice = @Model.Price; // قیمت پایه که از مدل به صورت مستقیم وارد می‌شود

        // گرفتن همه رادیو باتن‌ها
        const colorRadios = document.querySelectorAll('input[name="productColor"]');

        colorRadios.forEach(radio => {
            radio.addEventListener("click", function () {
                // دریافت قیمت اضافی برای رنگ انتخاب‌شده
                const additionalPrice = parseInt(radio.getAttribute("data-additional-price"));

                // محاسبه قیمت نهایی
                const finalPrice = basePrice + additionalPrice;

                // بروزرسانی قیمت نهایی در بخش مربوطه
                const finalPriceElement = document.querySelector(".product-seller-row--price-now .price");
                finalPriceElement.textContent = finalPrice.toLocaleString(); // نمایش قیمت جدید
            });
        });
    });
</script>

