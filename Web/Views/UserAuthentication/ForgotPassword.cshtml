@{
    Layout = "_UserAuthenticationLayout";
}
@model Domain.ViewModel.User.ForgotPasswordMailUserViewModel
<div class="page-wrapper">
    <main class="page-content page-auth">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="alert alert-danger">
                شما به این بخش دسترسی ندارید
            </div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                لطفاً فیلدهای مورد نیاز را به درستی پر کنید.
            </div>
        }
        @if (ViewBag.message!= null)
        {
            <div class="alert alert-danger">@ViewBag.message</div>
        }
        <!-- start of auth-container -->
        <div class="auth-container">
            <div class="auth-title mb-3">فراموشی رمز عبور </div>
            <!-- start of auth-box -->
            <div class="auth-box ui-box">
                <!-- start of auth-form -->
                <form asp-action="ForgotPassword" asp-controller="UserAuthentication" method="post" class="auth-form">
                    <!-- start of form-element -->
                    <div class="form-element-row mb-5">
                        <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <!-- start of form-element -->
                        </div>
                    <div class="form-element-row mb-3">
                        <button type="submit" class="btn btn-primary">تایید</button>
                    </div>
                    <!-- end of form-element -->
                    <!-- start of form-element -->
                    <div class="form-element-row">
                        <div>با ورود و یا ثبت نام در سایت شما
                            <a href="#" class="link">شرایط و
                                قوانین</a> استفاده
                            از تمام سرویس های
                            سایت و <a href="#" class="link">قوانین حریم خصوصی</a> آن را می‌پذیرید.
                        </div>
                    </div>
                    <!-- end of form-element -->
                </form>
                <!-- end of auth-form -->
            </div>
            <!-- end of auth-box -->
        </div>
        <!-- end of auth-container -->
    </main>
</div>