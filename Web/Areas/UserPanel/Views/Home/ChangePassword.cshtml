@model Domain.ViewModel.User.ChangePasswordUserViewModel


@{
    Layout = "_UserAuthenticationLayout";
}

<div class="page-wrapper">

    <main class="page-content page-auth">
        <!-- start of auth-container -->
        <div class="auth-container">
            <div class="auth-title mb-3">تغییر رمز عبور</div>
            <!-- start of auth-box -->
            <div class="auth-box ui-box">
                <!-- start of auth-form -->
                <form asp-action="ChangePassword" asp-controller="Home" asp-area="UserPanel" method="post"
                      class="auth-form">
                    <!-- start of form-element -->
                    @if (ViewBag.IsSuccess != null)
                    {
                        <div class="alert alert-success">
                            کلمه عبور شما با موفقیت تغییر کرد
                        </div>
                    }
                    <div class="form-element-row mb-5">
                        <input asp-for="OldPassword" type="text" class="form-control" placeholder="رمز عبور فعلی">
                        <span asp-validation-for="OldPassword" class="alert-danger"></span>
                    </div>
                    <div class="form-element-row mb-5">
                        <input asp-for="NewPassword" type="text" class="form-control" placeholder="رمز عبور جدید">
                        <span asp-validation-for="NewPassword" class="alert-danger"></span>
                    </div>
                    <div class="form-element-row mb-5">
                        <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="تکرار رمز عبور">
                        <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                    </div>
                    <!-- end of form-element -->
                    <!-- start of form-element -->
                    <div class="form-element-row mb-3">
                        <button type="submit" asp-action="ChangePassword" class="btn btn-primary">ثبت</button>
                    </div>
                    <!-- end of form-element -->
                    <!-- start of form-element -->

                    <!-- end of form-element -->
                </form>
                <!-- end of auth-form -->
            </div>
            <!-- end of auth-box -->
        </div>
        <!-- start of auth-container -->
    </main>

</div>

>