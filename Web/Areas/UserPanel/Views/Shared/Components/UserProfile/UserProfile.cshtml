@using Domain.Entities.Account
@{
    var user = ViewData["User"] as User;
}
<div class="ui-sticky ui-sticky-top">
    <div class="profile-user-info py-3 ui-box bg-white">
        <div class="profile-detail">
            <div class="d-flex align-items-center">
                <div class="profile-avatar me-3">
                    <img src="/theme-assets/images/avatar/default.png" alt="avatar">
                </div>
                <div class="profile-info">
                    <a href="#" class="text-decoration-none text-dark fw-bold mb-2">
                        @user!.FirstName @user.LastName
                    </a>
                    <div class="text-muted fs-7 fw-bold">@user.PhoneNumber</div>
                </div>
            </div>
            <div class="user-options">
                <ul>
                    <li>
                        <span class="label">کیف پول</span>
                        <span class="detail">
                            <span class="d-block">
                                ۰ <span class="currency fs-7 fw-bold">تومان</span>
                            </span>
                            <a href="#"
                               class="link border-bottom-0 text-info fs-7 fw-bold">
                                افزایش
                                موجودی <i class="ri-arrow-left-s-line"></i>
                            </a>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
        <ul class="nav nav-items-with-icon flex-column">
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="nav-link-icon ri-file-list-3-line"></i>
                    سفارش
                    های من
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="UserPanel" asp-controller="Ticket" asp-action="TicketList">
                    <i class="nav-link-icon ri-ticket-2-line"></i>
                    تیکت های من
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="FavoritesList" asp-controller="Home" asp-area="UserPanel">
                    <i class="nav-link-icon ri-heart-3-line"></i>کالا های مورد علاقه
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Comments" asp-area="UserPanel">
                    <i class="nav-link-icon ri-chat-1-line"></i>
                    نظرات
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="nav-link-icon ri-map-pin-line"></i> نشانی
                    ها
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="GiftCodes" asp-controller="Home" asp-area="UserPanel">
                    <i class="nav-link-icon ri-gift-line"></i>کد های تخفیف
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="UserPanel" asp-controller="Home" asp-action="UserNotification">
                    <i class="nav-link-icon ri-notification-line"></i>
                    پیغام ها
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="UserPanel" asp-controller="Home" asp-action="UserInfo">
                    <i class="nav-link-icon ri-user-line"></i> اطلاعات
                    حساب
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="UserAuthentication" asp-area="" asp-action="LogOut">
                    <i class="nav-link-icon ri-logout-box-r-line"></i>
                    خروج
                </a>
            </li>
        </ul>
    </div>
</div>