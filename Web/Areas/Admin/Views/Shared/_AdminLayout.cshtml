<!DOCTYPE html>
<html lang="en"
      class="light-style layout-navbar-fixed layout-menu-fixed"
      dir="rtl"
      data-theme="theme-default"
      data-assets-path="/Admin/"
      data-template="vertical-menu-template">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <meta name="description" content=""/>
    <partial name="_AdminHeaderReferences"/>
    @await RenderSectionAsync("Style", false)
</head>
<body>

<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        @await Component.InvokeAsync("AdminSideBar")

        <div class="layout-page">
            <div class="container mb-">
                <partial name="_AdminNavbar"/>
                @RenderBody()
            </div>
        </div>

    </div>
    <div class="layout-overlay layout-menu-toggle"></div>
    <div class="drag-target"></div>
</div>
<partial name="_AdminFooterReferences"/>
<partial name="_AdminMessagePartial"/>
@await RenderSectionAsync("Scripts", false)
</body>
</html>