@model Domain.ViewModel.Discount.DiscountViewModel

@{
    ViewData["Title"] = "اضافه کردن تخفیف";
}

<h1>اضافه کردن تخفیف</h1>

<form asp-action="AddDiscount" asp-controller="Discount" asp-area="Admin" method="post" class="needs-validation" novalidate>
    <!-- Discount Code -->
    <div class="form-group mb-3">
        <label asp-for="Code" class="form-label"></label>
        <input asp-for="Code" class="form-control" placeholder="کد تخفیف (اختیاری)" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <!-- Discount Type -->
    <div class="form-group mb-3">
        <label asp-for="IsPercentage" class="form-label"></label>
        <select asp-for="IsPercentage" class="form-control" required>
            <option value="true">درصدی</option>
            <option value="false">مقدار ثابت</option>
        </select>
        <span asp-validation-for="IsPercentage" class="text-danger"></span>
    </div>

    <!-- Discount Value -->
    <div class="form-group mb-3">
        <label asp-for="Value" class="form-label"></label>
        <input asp-for="Value" class="form-control" type="number" step="0.01" placeholder="مقدار تخفیف" required />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <!-- Start Date -->
    <div class="form-group mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <!-- End Date -->
    <div class="form-group mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <!-- Is Active -->
    <div class="form-group form-check mb-3">
        <input asp-for="IsActive"  class="form-check-input" type="checkbox" checked />
        <label asp-for="IsActive" class="form-check-label"></label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <!-- Usage Limit -->
    <div class="form-group mb-3">
        <label asp-for="UsageLimit" class="form-label"></label>
        <input asp-for="UsageLimit" class="form-control" type="number" placeholder="تعداد استفاده (اختیاری)" />
        <span asp-validation-for="UsageLimit" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">اضافه کردن تخفیف</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}