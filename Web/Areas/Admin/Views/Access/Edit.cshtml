@model Domain.ViewModel.User.EditUserRolesViewModel

@{
    ViewData["Title"] = "ویرایش نقش‌های کاربر";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditRole" asp-controller="Access" asp-area="Admin" method="post">
    <input type="hidden" asp-for="UserId"/>

    <div class="form-group">
        <label>نام کاربری: @Model.UserName</label>
    </div>

    <div class="form-group">
        <label>نقش‌های موجود:</label>
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedRoles" value="@role"
                       @(Model.AssignedRoles.Contains(role) ? "checked" : "")/>
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">ذخیره</button>
    <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
</form>