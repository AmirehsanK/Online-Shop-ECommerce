@model Domain.ViewModel.User.FilterUserWithRolesViewModel

@{
    ViewData["Title"] = "لیست کاربران";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="table-responsive text-nowrap">
<table class="table">
    <thead>
    <tr>
        <th>نام کاربری</th>
        <th>ایمیل</th>
        <th>نقش‌ها</th>
        <th>عملیات</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Entities)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@string.Join(", ", user.Roles)</td>
            <td>
                <a asp-action="AddOrEdit" asp-controller="Access" asp-area="Admin" asp-route-id="@user.UserId" class="btn btn-warning">ویرایش</a>
            </td>
        </tr>
    }
    </tbody>
</table>
    </div>
</div>
<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = Model.StartPage; i <= Model.EndPage; i++)
        {
            <li class="page-item @(i == Model.Page ? "active" : "")">
                <a class="page-link" href="?Page=@i">@i</a>
            </li>
        }
    </ul>
</nav>