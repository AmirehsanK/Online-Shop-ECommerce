@model Domain.ViewModel.Product.ProductSpecification.AddNewProductSpecification

@{
    ViewData["Title"] = "اضافه کردن مشخصات محصول";
}
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const tagInputContainer = document.getElementById("tagInputContainer");
        const tagInput = document.getElementById("tagInput");

        const tags = [];

        function createTag(label) {
            const div = document.createElement("div");
            div.className = "tag d-inline-flex align-items-center";
            div.innerHTML = `<span>${label}</span><button type="button" onclick="removeTag('${label}')" class="ms-1">&times;</button>`;
            return div;
        }

        function removeTag(label) {
            const index = tags.indexOf(label);
            if (index !== -1) {
                tags.splice(index, 1);
                renderTags();
            }
        }

        function renderTags() {
            tagInputContainer.innerHTML = '';
            tags.forEach(tag => tagInputContainer.appendChild(createTag(tag)));
            tagInputContainer.appendChild(tagInput);
            tagInput.focus();
        }

        tagInput.addEventListener("keyup", (event) => {
            if (event.key === "Enter" && tagInput.value.trim() !== "") {
                const value = tagInput.value.trim();
                if (!tags.includes(value)) {
                    tags.push(value);
                    renderTags();
                }
                tagInput.value = "";
            }
        });
    </script>

}
@section Style
{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .tag {
            background-color: #007bff;
            color: white;
            border-radius: 20px;
            padding: 0 10px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

            .tag button {
                background: none;
                border: none;
                color: white;
                font-size: 16px;
                line-height: 1;
                padding: 0;
                cursor: pointer;
            }

                .tag button:hover {
                    color: #ddd;
                }

        .tag-input-container {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

            .tag-input-container input {
                border: none;
                outline: none;
                flex: 1;
            }
    </style>
}
<form asp-area="Admin" asp-controller="ProductSpecification" asp-action="AddNewSpecification" method="post">
    <div class="card mb-4">
        <h5 class="card-header">hello</h5>
        <div class="card-body">
            <div class="form-floating">
                <input asp-for="Title" type="text" class="form-control">
                <span asp-validation-for="Title" class="text-bg-danger"></span>
                <label for="floatingInput">عنوان</label>
           
            </div>
            <div class="form-floating">
                <label for="tagInput" class="form-label"> مقدار</label>
                <div class="tag-input-container" id="tagInputContainer">
                    <input asp-for="Values" type="text" id="tagInput" class="form-control border-0" />
                    <span asp-validation-for="Values" class="text-bg-danger"></span>
                </div>
            </div>
            <div class="form-floating">
                <button type="submit" class="btn btn-success">ثبت</button>
            </div>

            </div>
    </div>
</form>