@model Domain.ViewModel.Image.BannerViewModel
@using Application.Tools;
<head>
    <title>ویرایش عکس</title>
</head>

<div class="container mt-5">
    <h3 class="mb-4">ویرایش عکس</h3>
    <div class="card">
        <div class="card-body">

            <!-- Display Current Image -->
            <div class="mb-3">
                <label class="form-label">عکس فعلی:</label>
                @if (!string.IsNullOrEmpty(Model.Link))
                {
                    <div>
                        <img src="@PathTools.BannerPath@Model.Title" alt="Current Image" class="img-fluid" style="max-width: 300px;"/>
                    </div>
                }
                else
                {
                    <p class="text-danger">عکسی برای نمایش وجود ندارد.</p>
                }
            </div>

            <!-- Display Current Link -->
            <div class="mb-3">
                <label class="form-label">لینک فعلی:</label>
                @if (!string.IsNullOrEmpty(Model.Link))
                {
                    <div>
                        <a href="@Model.Link" target="_blank" class="text-primary">@Model.Link</a>
                    </div>
                }
                else
                {
                    <p class="text-danger">لینکی برای نمایش وجود ندارد.</p>
                }
            </div>

            <!-- Edit Form -->
            <form asp-action="Update" asp-controller="Image" asp-area="Admin" method="post" enctype="multipart/form-data">
                <!-- Hidden Field for Banner ID -->
                <input type="hidden" asp-for="Title"/>

                <div class="mb-3">
                    <label asp-for="Image" class="form-label">تغییر عکس</label>
                    <input asp-for="Image" type="file" class="form-control"/>
                </div>
                <div class="mb-3">
                    <label asp-for="ExpirationDate" class="form-label">تاریخ انقضا</label>
                    <input asp-for="ExpirationDate" type="date" class="form-control"/>
                </div>
                <div class="mb-3">
                    <label asp-for="Link" class="form-label">تغییر لینک</label>
                    <input asp-for="Link" type="text" class="form-control" placeholder="لینک جدید را وارد کنید"/>
                </div>
                <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
                <a asp-action="ImageSlider" asp-controller="Image" asp-area="Admin" class="btn btn-secondary">بازگشت</a>
            </form>
        </div>
    </div>
</div>