@model Domain.ViewModel.Product.Product.ProductViewModel

<h2>مدیریت محصولات</h2>

<div class="form-group">
    <label for="SubCategory">انتخاب زیر دسته‌بندی</label>
    <select id="SubCategory" name="SubCategoryId" class="form-control">
        <option value="">انتخاب زیر دسته‌بندی</option>
        @foreach (var subCategory in Model.SubCategories)
        {
            <option value="@subCategory.CategoryId">@subCategory.Title</option>
        }
    </select>
</div>

<div class="form-group">
    <button id="LoadAllProducts" class="btn btn-primary">بارگذاری تمام محصولات</button>
</div>

<table class="table table-bordered mt-4" id="ProductsTable">
    <thead>
        <tr>
            <th>نام محصول</th>
            <th>تصویر</th>
            <th>دسته‌بندی</th>
            <th>قیمت</th>
            <th>موجودی</th>
            <th>جزئیات</th>
        </tr>
    </thead>
    <tbody>
        <!-- Products will be dynamically loaded here -->
    </tbody>
</table>
@if (Model.ProductName != null && Model.ProductName.Any())
{
    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>نام محصول</th>
                <th>تصویر</th>
                <th>دسته‌بندی</th>
                <th>قیمت</th>
                <th>موجودی</th>
                <th>جزئیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>
                        <img src="@Url.Content($"~/images/products/{product.Image}")" alt="@product.Name" style="width: 50px; height: 50px;" />
                    </td>
                    <td>@product.CategoryTitle</td>
                    <td>@product.Price</td>
                    <td>@product.Inventory</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info btn-sm">مشاهده جزئیات</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>محصولی برای نمایش وجود ندارد.</p>
}