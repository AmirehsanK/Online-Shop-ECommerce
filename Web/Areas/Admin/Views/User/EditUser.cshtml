@model Domain.ViewModel.User.Admin.EditUserViewModel
@{
    ViewData["Title"] = "ویرایش کاربر";
}

<form asp-area="Admin" asp-controller="User" asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="card mb-4">
        <h5 class="card-header">ویرایش کاربر</h5>
        <div class="card-body">
            <div class="mb-3 row">
                <label asp-for="FirstName" for="html5-text-input" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="FirstName" class="form-control" type="text" id="html5-text-input">
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="LastName" for="html5-text-input" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="LastName" class="form-control" type="text" id="html5-text-input">
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Email" for="html5-text-input" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" type="text" id="html5-text-input">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Password" for="html5-text-input" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" placeholder="در صورت نیاز تغییر دهید" value="@null"
                           type="text" id="html5-text-input">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="IsAdmin" for="html5-text-input" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="IsAdmin" class="form-check-input" type="checkbox" id="defaultCheck3" checked="">
                    <span asp-validation-for="IsAdmin"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="IsEmailActive" for="html5-text-input" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="IsEmailActive" class="form-check-input" type="checkbox" id="defaultCheck3"
                           checked="">
                    <span asp-validation-for="IsEmailActive"></span>
                </div>
            </div>

            <button asp-controller="User" asp-action="EditUser" asp-area="Admin" asp-route-UserId="@Model.Id"
                    type="submit" class="btn btn-success">ثبت
            </button>
        </div>

    </div>
</form>


