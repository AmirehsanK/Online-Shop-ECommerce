@using Microsoft.IdentityModel.Tokens
@using Microsoft.IdentityModel.Tokens
@model List<Domain.ViewModel.User.Admin.UserListViewModel>
@{
    ViewData["Title"] = "لیست کاربران";
}

<div class="card">
    <h5 class="card-header">لسیت کاربران</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <caption class="ms-4">
            </caption>
            <thead>
                <tr>
                    <th>کد</th>
                    <th>نام</th>
                    <th>نام خانوادگی</th>
                    <th>ایمیل</th>
                    <th>کلمه عبور</th>
                    <th>ادمین است؟</th>
                    <th>فعال است؟</th>

                </tr>
            </thead>
            <tbody>
            @if (!Model.IsNullOrEmpty() && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong> @user.Id </strong></td>
                        <td>@user.FirstName </td>
                        <td>@user.LastName</td>
                        <td><span class="badge bg-label-primary me-1">@user.Email</span></td>
                        <td>
                            @user.Password
                        </td>
                        <td>
                            @user.IsAdmin
                        </td>
                            <td>
                                @user.IsEmailActive
                            </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
